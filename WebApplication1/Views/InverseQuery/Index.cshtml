                                str2 += "<td align='center' style='height: 40px'></td>";
                                str2 += "<td align='center' style='height: 40px'></td>";
                                str2 += "<tr>";
                                $("#table2").append(str2);
                            }
                        }

                    }
                    else {
                        layer.close(load);
                        $("#table2").html("");
                        for (var t = 0; t < 12; t++) {
                            var str3 = "<tr>";
                            str3 += "<td align='center' style='height: 40px'></td>";
                            str3 += "<td align='center' style='height: 40px'></td>";
