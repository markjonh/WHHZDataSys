                            str3 += "<td align='center' style='height: 40px'></td>";
                            str3 += "<tr>";
                            $("#table2").append(str3);}
                        layer.msg(res.mess, { icon: 5 });
                    }

                }
            });
        }
        else {
            layer.alert("参数错误！", { icon: 2 });
        }

    }






















