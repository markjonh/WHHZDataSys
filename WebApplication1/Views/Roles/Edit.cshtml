@model WebApplication1.Model.Dto.RolesDto
<script>
    $(function () {
        $("#m_role").addClass("active");
        $("#m_role").parent().show();
        $("#m_role").parent().parent().addClass("open");

        $("#btn_cp").click(function () {
            var Name = $.trim($("#Name").val());
            if (Name == "") {
                layer.alert('名称不能为空.', { icon: 2 });
                return;
            }

            load = layer.load(1, { shade: [0.3, '#ccc'] });
            $("form:first").submit();
        });
    });
    var load;
    function OnSuccess(r) {
        layer.close(load);
        if (r.Successed) {
            layer.alert('添加成功', { icon: 1 }, function () { window.location = "/Roles/Index"; });
        }
        else {
            layer.alert(r.Message, { icon: 2 });
        }
    }
</script>
<ul class="breadcrumb">
    <li><span class="primary-font"><i class="icon-home"></i></span><a href="/Home/Index">首页</a></li>
    <li><a href="/Role/Index">角色管理</a></li>
    <li>编辑</li>
</ul>
<div class="smart-widget">
    <div class="smart-widget-header">
        编辑角色
        <span class="smart-widget-option">
            <span class="refresh-icon-animated">
                <i class="fa fa-circle-o-notch fa-spin"></i>
            </span>
            <a href="#" class="widget-collapse-option" data-toggle="collapse">
                <i class="fa fa-chevron-up"></i>
            </a>
        </span>
    </div>
    <div class="smart-widget-inner">

        <div class="smart-widget-body">
            @using (Ajax.BeginForm("Edit", null, new AjaxOptions { HttpMethod = "Post", OnSuccess = "OnSuccess" }, new { @class = "form-horizontal no-margin form-border" }))
            {
                <div class="form-group">
                    <label class="col-lg-2 control-label">角色名称：</label>
                    <div class="col-lg-10">
                        <input type="text" maxlength="20" class="form-control" placeholder="请输入角色名称" id="Name" name="Name" value="@Model.Name">
                        <!-- /.row -->
                    </div>
                    <!-- /.col -->
                </div>

                <div class="form-group">
                    <label class="col-lg-2 control-label"></label>
                    <div class="col-lg-10">
                        <button type="button" class="btn btn-danger" data-toggle="modal" id="btn_cp"> 编 辑 </button>
                        <input type="hidden" id="Id" name="Id" value="@Model.Id" />
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /form-group -->
            }
        </div>
    </div>
    <!-- ./smart-widget-inner -->
</div>