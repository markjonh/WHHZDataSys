    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Bootstrap core CSS -->
    <link href="~/Content/Simplify/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="~/Content/Simplify/css/font-awesome.min.css" rel="stylesheet">
   
    <!-- ionicons -->
    <link href="~/Content/Simplify/css/ionicons.min.css" rel="stylesheet">

    <!-- Simplify -->
    <link href="~/Content/Simplify/css/simplify.min.css" rel="stylesheet">


    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <a href="" id="scroll-to-top" class="hidden-print"><i class="icon-chevron-up"></i></a>
    @*<script src="~/Scripts/jquery.js"></script>*@
    @*<script src="/Content/Simplify/js/jquery-1.11.1.min.js"></script>*@
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

    <script src="~/Content/Simplify/bootstrap/js/bootstrap.min.js"></script>

    <!-- Slimscroll -->
    <script src='~/Content/Simplify/js/jquery.slimscroll.min.js'></script>

    <!-- Popup Overlay -->
    <script src='~/Content/Simplify/js/jquery.popupoverlay.min.js'></script>

    <!-- Modernizr -->
    <script src='~/Content/Simplify/js/modernizr.min.js'></script>

    <!-- Simplify -->
    <script src="~/Content/Simplify/js/simplify/simplify.js"></script>

    <script src="~/Content/Simplify/js/parsley.min.js"></script>
    <script src="~/Content/layer/layer.js"></script>

</head>

<body class="overflow-hidden light-background">
    <div class="wrapper no-navigation preload">
        <div class="sign-in-wrapper">
            <div class="sign-in-inner">
                <div class="login-brand text-center">
                    <i class="fa  m-right-xs">
                    </i>武汉汇众 <strong class="text-skin">追溯系统</strong>
                </div>

                <form action="/Sign/In" data-ajax="true" data-ajax-method="Post" data-ajax-success="OnSuccess" id="form0" method="post" data-validate="parsley" novalidate>
                    <div class="form-group m-bottom-md" id="emaildiv">
                        <input type="text" class="form-control" placeholder="请输入用户名" id="uname" name="uname" data-parsley-required="true">
                    </div>
                    <div class="form-group" id="pworddiv">
                        <input type="password" class="form-control" placeholder="请输入密码" id="pword" name="pword" data-parsley-required="true">
                    </div>

                    <div class="m-top-md p-top-sm">
                        <a href="javascript:signin();" class="btn btn-success block">登 录</a>
                    </div>

                    <div class="m-top-md p-top-sm">
                        <div class="font-12 text-center m-bottom-xs">
                            <a href="#" class="font-12"></a>
                        </div>


                    </div>
                    <div class="m-top-md p-top-sm">

                        <div class="font-12 text-center m-bottom-xs">&copy; 2018 追溯系统. All Rights Reserved.</div>
                        <div class="font-12 text-center m-bottom-xs">PowerBy：<a href="http://www.51sole.com/company/detail_9707177.html/">上海绿矽自动化科技有限公司</a>.</div>
                    </div>

                </form>
            </div>
            <!-- ./sign-in-inner -->
        </div>
        <!-- ./sign-in-wrapper -->
    </div>
    <!-- /wrapper -->

  
    <script type="text/javascript">
        $(function () {
            $("#form0").keydown(function (e) {
                var e = e || event,
                keycode = e.which || e.keyCode;
                if (keycode === 13) {
                   // alert("即将进入sign");
                    signin();
                }
            });

        });
        var load;
        function signin() {
            load = layer.load(1, { shade: [0.3, '#ccc'] });
            if ($("#uname").val() === "" || $("pword").val() === "") {

                layer.close(load);
                layer.msg('请输入用户名和密码', { icon: 5 });
                return false;
            }

            $("form:first").submit();
        }

        function OnSuccess(r) {

            if (r.Successed) {
               //alert("登陆成功！");
                location.href = "@ViewBag.url";
            }
            else {
                layer.close(load);
                layer.msg(r.Message, { icon: 5 });
            }
        }
    </script>
</body>
</html>
